<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_color">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/card_background"
        android:padding="16dp"
        android:elevation="2dp">


    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:background="@color/background_color">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/card_background"
            android:layout_margin="16dp"
            android:elevation="4dp">

            <!-- Buttons Container (Horizontal) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingBottom="16dp">

                <Button
                    android:id="@+id/button_view_exam_schedules"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Exam Schedules"
                    android:textSize="16sp"
                    android:background="@drawable/button_background"
                    android:textColor="@android:color/white"
                    android:padding="12dp"
                    android:layout_marginEnd="8dp"
                    android:elevation="4dp"
                    android:stateListAnimator="@animator/button_elevation" />

                <Button
                    android:id="@+id/button_view_marks"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="View Marks"
                    android:textSize="16sp"
                    android:background="@drawable/button_background"
                    android:textColor="@android:color/white"
                    android:padding="12dp"
                    android:layout_marginStart="8dp"
                    android:elevation="4dp"
                    android:stateListAnimator="@animator/button_elevation" />
            </LinearLayout>

            <!-- Loading Indicator -->
            <ProgressBar
                android:id="@+id/loading_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"
                android:indeterminateTint="@color/primary_accent" />

            <!-- Exam Schedules Section -->
            <LinearLayout
                android:id="@+id/exam_schedules_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone" />

            <!-- Exam Scores Section -->
            <LinearLayout
                android:id="@+id/exam_scores_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <!-- Exam Type Dropdown -->
                <Spinner
                    android:id="@+id/exam_type_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/spinner_background"
                    android:padding="12dp"
                    android:layout_marginBottom="16dp"
                    android:spinnerMode="dropdown" />

                <!-- Exam Scores Table -->
                <LinearLayout
                    android:id="@+id/exam_scores_table"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/table_background"
                    android:padding="12dp"
                    android:elevation="4dp"
                    android:layout_marginBottom="16dp" />

                <!-- Average, Grade, and Congratulatory Message -->
                <TextView
                    android:id="@+id/exam_scores_summary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="16sp"
                    android:textColor="@color/text_color"
                    android:gravity="center"
                    android:padding="12dp"
                    android:background="@color/card_background"
                    android:elevation="2dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
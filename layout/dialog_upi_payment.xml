<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:padding="16dp">

    <TextView
        android:id="@+id/upi_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="UPI Payment"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#212121"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/upi_image"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_qr_code"
        android:contentDescription="UPI QR or Apps"
        app:layout_constraintTop_toBottomOf="@id/upi_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/upi_pin_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="Enter UPI PIN (4-6 digits)"
        android:inputType="numberPassword"
        android:background="@drawable/edit_text_background"
        app:layout_constraintTop_toBottomOf="@id/upi_image"
        app:layout_constraintEnd_toEndOf="parent" />
    <Button
        android:id="@+id/submit_pin_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:backgroundTint="#4A90E2"
        android:textColor="#FFFFFF"
        android:text="Submit PIN"
        app:layout_constraintTop_toBottomOf="@id/upi_pin_input"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/cancel_button" />

    <Button
        android:id="@+id/cancel_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:backgroundTint="#D32F2F"
        android:textColor="#FFFFFF"
        android:text="Cancel"
        app:layout_constraintTop_toBottomOf="@id/upi_pin_input"
        app:layout_constraintStart_toEndOf="@id/submit_pin_button"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
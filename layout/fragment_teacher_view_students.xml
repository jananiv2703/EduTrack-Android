<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="24dp">

    <!-- Header Section -->
    <TextView
        android:id="@+id/students_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Students"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="#1A237E"
        android:fontFamily="@font/poppins"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/teacher_id_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Teacher ID: "
        android:textSize="18sp"
        android:textColor="#546E7A"
        android:fontFamily="@font/poppins"
        app:layout_constraintTop_toBottomOf="@id/students_title"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/class_section_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Class: N/A | Section: N/A"
        android:textSize="18sp"
        android:textColor="#546E7A"
        android:fontFamily="@font/poppins"
        app:layout_constraintTop_toBottomOf="@id/teacher_id_display"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/student_count_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Total Students: 0"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#1976D2"
        android:fontFamily="@font/poppins"
        app:layout_constraintTop_toBottomOf="@id/class_section_display"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/header_shadow"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="#E0E0E0"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/student_count_display"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Search Bar -->
    <androidx.cardview.widget.CardView
        android:id="@+id/search_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/header_shadow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/search_icon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@android:drawable/ic_menu_search"
                android:tint="#546E7A"
                android:layout_marginStart="16dp"
                android:contentDescription="Search Icon" />

            <EditText
                android:id="@+id/search_input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Search by name or register no"
                android:textSize="18sp"
                android:textColor="#2E3B55"
                android:textColorHint="#B0BEC5"
                android:background="@null"
                android:paddingStart="16dp"
                android:paddingEnd="8dp"
                android:fontFamily="@font/poppins"
                android:singleLine="true"
                android:imeOptions="actionSearch" />

            <ImageView
                android:id="@+id/clear_search_icon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                android:tint="#F44336"
                android:layout_marginEnd="16dp"
                android:visibility="gone"
                android:contentDescription="Clear Search" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- ScrollView for Students -->
    <ScrollView
        android:id="@+id/students_scroll_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/search_card"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/students_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="12dp"
            android:paddingBottom="24dp" />
    </ScrollView>

    <!-- Loading Spinner -->
    <ProgressBar
        android:id="@+id/loading_spinner"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:indeterminateTint="#1976D2"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- No Students Message -->
    <androidx.cardview.widget.CardView
        android:id="@+id/no_students_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="#F5F7FA"
        app:layout_constraintTop_toTopOf="@id/students_scroll_view"
        app:layout_constraintBottom_toBottomOf="@id/students_scroll_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/no_students_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No students found or you are not a class teacher."
            android:textSize="18sp"
            android:textColor="#546E7A"
            android:fontFamily="@font/poppins"
            android:padding="24dp"
            android:visibility="gone" />
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
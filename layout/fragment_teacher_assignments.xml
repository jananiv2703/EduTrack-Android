<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- ScrollView for scrollable content -->
    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp">

            <!-- Header Section -->
            <TextView
                android:id="@+id/assignments_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Learning Materials"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="#1A237E"
                android:fontFamily="@font/poppins"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/teacher_id_display"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Teacher ID: "
                android:textSize="18sp"
                android:textColor="#546E7A"
                android:fontFamily="@font/poppins"
                app:layout_constraintTop_toBottomOf="@id/assignments_title"
                app:layout_constraintStart_toStartOf="parent" />

            <View
                android:id="@+id/header_shadow"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:background="#E0E0E0"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/teacher_id_display"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Form Section -->
            <androidx.cardview.widget.CardView
                android:id="@+id/form_card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="#FFFFFF"
                app:layout_constraintTop_toBottomOf="@id/header_shadow"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <Spinner
                        android:id="@+id/class_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_text_background"
                        android:padding="12dp"
                        android:spinnerMode="dropdown"
                        android:fontFamily="@font/poppins"
                        android:entries="@array/class_options" />

                    <Spinner
                        android:id="@+id/section_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/edit_text_background"
                        android:padding="12dp"
                        android:spinnerMode="dropdown"
                        android:fontFamily="@font/poppins"
                        android:entries="@array/section_options" />

                    <Spinner
                        android:id="@+id/subject_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/edit_text_background"
                        android:padding="12dp"
                        android:spinnerMode="dropdown"
                        android:fontFamily="@font/poppins"
                        android:entries="@array/subject_filter_options" />

                    <Spinner
                        android:id="@+id/type_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/edit_text_background"
                        android:padding="12dp"
                        android:spinnerMode="dropdown"
                        android:fontFamily="@font/poppins" />

                    <EditText
                        android:id="@+id/name_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:hint="Name (e.g., Algebra Worksheet)"
                        android:textSize="18sp"
                        android:textColor="#2E3B55"
                        android:textColorHint="#B0BEC5"
                        android:fontFamily="@font/poppins"
                        android:padding="12dp"
                        android:background="@drawable/edit_text_background" />

                    <EditText
                        android:id="@+id/description_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:hint="Description"
                        android:textSize="18sp"
                        android:textColor="#2E3B55"
                        android:textColorHint="#B0BEC5"
                        android:fontFamily="@font/poppins"
                        android:padding="12dp"
                        android:minLines="3"
                        android:gravity="top"
                        android:background="@drawable/edit_text_background" />

                    <EditText
                        android:id="@+id/due_date_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:hint="Due Date (YYYY-MM-DD)"
                        android:textSize="18sp"
                        android:textColor="#2E3B55"
                        android:textColorHint="#B0BEC5"
                        android:fontFamily="@font/poppins"
                        android:padding="12dp"
                        android:background="@drawable/edit_text_background"
                        android:visibility="gone"
                        android:focusable="false"
                        android:focusableInTouchMode="false" />

                    <Button
                        android:id="@+id/file_picker_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Select File (Optional)"
                        android:textSize="16sp"
                        android:textColor="#FFFFFF"
                        android:background="@drawable/active_background_gradient"
                        android:fontFamily="@font/poppins" />

                    <TextView
                        android:id="@+id/selected_file_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="No file selected"
                        android:textSize="14sp"
                        android:textColor="#546E7A"
                        android:fontFamily="@font/poppins"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/submit_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Submit"
                        android:textSize="18sp"
                        android:textColor="#FFFFFF"
                        android:background="@drawable/active_background_gradient"
                        android:fontFamily="@font/poppins" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- RecyclerView for Entries -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/entries_recycler_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/form_card"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:visibility="gone" />

            <!-- No Entries Message -->
            <androidx.cardview.widget.CardView
                android:id="@+id/no_entries_card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="#F5F7FA"
                app:layout_constraintTop_toBottomOf="@id/entries_recycler_view"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:id="@+id/no_entries_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No entries found."
                    android:textSize="18sp"
                    android:textColor="#546E7A"
                    android:fontFamily="@font/poppins"
                    android:padding="24dp"
                    android:visibility="gone" />
            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <!-- Loading Spinner (outside ScrollView) -->
    <ProgressBar
        android:id="@+id/loading_spinner"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:indeterminateTint="#1976D2"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
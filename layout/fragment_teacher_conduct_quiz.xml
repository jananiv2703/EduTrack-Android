<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Teacher ID Display -->
        <TextView
            android:id="@+id/teacher_id_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Create Quiz Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/create_quiz_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#FFFFFF"
            app:layout_constraintTop_toBottomOf="@id/teacher_id_display"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:id="@+id/quiz_title_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Create a New Quiz"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#2E7D32"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/class_input_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:hintTextColor="#4CAF50"
                    app:boxStrokeColor="#4CAF50"
                    app:boxBackgroundColor="#F5F7FA"
                    app:layout_constraintTop_toBottomOf="@id/quiz_title_text"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:endIconMode="dropdown_menu">

                    <com.google.android.material.textfield.MaterialAutoCompleteTextView
                        android:id="@+id/class_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Class"
                        android:textSize="16sp"
                        android:textColor="#1A1A1A"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/section_input_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:hintTextColor="#4CAF50"
                    app:boxStrokeColor="#4CAF50"
                    app:boxBackgroundColor="#F5F7FA"
                    app:layout_constraintTop_toBottomOf="@id/class_input_layout"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:endIconMode="dropdown_menu">

                    <com.google.android.material.textfield.MaterialAutoCompleteTextView
                        android:id="@+id/section_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Section"
                        android:textSize="16sp"
                        android:textColor="#1A1A1A"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/quiz_name_input_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:hintTextColor="#4CAF50"
                    app:boxStrokeColor="#4CAF50"
                    app:boxBackgroundColor="#F5F7FA"
                    app:layout_constraintTop_toBottomOf="@id/section_input_layout"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/quiz_name_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Quiz Name (e.g., Math Quiz 1)"
                        android:textSize="16sp"
                        android:textColor="#1A1A1A"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/description_input_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:hintTextColor="#4CAF50"
                    app:boxStrokeColor="#4CAF50"
                    app:boxBackgroundColor="#F5F7FA"
                    app:layout_constraintTop_toBottomOf="@id/quiz_name_input_layout"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/description_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Description"
                        android:textSize="16sp"
                        android:textColor="#1A1A1A"/>
                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:id="@+id/questions_container"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:animateLayoutChanges="true"
                    app:layout_constraintTop_toBottomOf="@id/description_input_layout"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="16dp"/>

                <Button
                    android:id="@+id/add_question_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Question"
                    android:textSize="16sp"
                    android:backgroundTint="#03A9F4"
                    android:textColor="#FFFFFF"
                    app:cornerRadius="12dp"
                    app:layout_constraintTop_toBottomOf="@id/questions_container"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="8dp"/>

                <Button
                    android:id="@+id/create_quiz_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Create Quiz"
                    android:textSize="16sp"
                    android:background="@drawable/button_gradient"
                    android:textColor="#FFFFFF"
                    app:cornerRadius="12dp"
                    app:layout_constraintTop_toBottomOf="@id/add_question_button"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="16dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <!-- Divider -->
        <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            app:layout_constraintTop_toBottomOf="@id/create_quiz_card"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"/>

        <!-- View Quiz Details Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/view_quiz_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#FFFFFF"
            app:layout_constraintTop_toBottomOf="@id/divider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:id="@+id/view_quiz_title_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View Quiz Details"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#0288D1"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/view_quiz_name_input_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:hintTextColor="#0288D1"
                    app:boxStrokeColor="#0288D1"
                    app:boxBackgroundColor="#F5F7FA"
                    app:layout_constraintTop_toBottomOf="@id/view_quiz_title_text"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/view_quiz_name_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter Quiz Name (e.g., Math Quiz 1)"
                        android:textSize="16sp"
                        android:textColor="#1A1A1A"/>
                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/view_quiz_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="View Quiz"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    app:cornerRadius="12dp"
                    app:layout_constraintTop_toBottomOf="@id/view_quiz_name_input_layout"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="16dp"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/quiz_details_container"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@id/view_quiz_button"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="16dp">

                    <TextView
                        android:id="@+id/quiz_details_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="#1A1A1A"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <TextView
                        android:id="@+id/questions_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="#1A1A1A"
                        app:layout_constraintTop_toBottomOf="@id/quiz_details_text"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="8dp"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <!-- Loading Spinner -->
        <ProgressBar
            android:id="@+id/loading_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            android:indeterminateTint="#2196F3"
            app:layout_constraintTop_toBottomOf="@id/view_quiz_card"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
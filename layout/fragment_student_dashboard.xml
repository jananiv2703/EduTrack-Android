<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient">

    <!-- ScrollView for scrollable content -->
    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Welcome Message -->
            <TextView
                android:id="@+id/welcome_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome, Student!"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#1A237E"
                android:fontFamily="@font/poppins"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- Student ID -->
            <TextView
                android:id="@+id/student_id_display"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Student ID: "
                android:textSize="16sp"
                android:textColor="#546E7A"
                android:fontFamily="@font/poppins"
                app:layout_constraintTop_toBottomOf="@id/welcome_message"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- Announcements Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/new_announcements_card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp"
                app:cardBackgroundColor="#FFFFFF"
                app:layout_constraintTop_toBottomOf="@id/student_id_display"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Card Header Shadow -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="4dp"
                        android:background="@drawable/card_header_shadow" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="8dp">

                        <TextView
                            android:id="@+id/new_announcements_text"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="No new announcements."
                            android:textSize="20sp"
                            android:textColor="#2E3B55"
                            android:fontFamily="@font/poppins" />

                        <LinearLayout
                            android:id="@+id/notification_container"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/notification_count"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:background="@drawable/circle_button_background"
                                android:gravity="center"
                                android:text="0"
                                android:textSize="14sp"
                                android:textColor="#FFFFFF"
                                android:fontFamily="@font/poppins" />
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="4dp"
                        android:layout_marginTop="12dp"
                        android:background="#1976D2" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Assignments Glimpse Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/assignments_card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp"
                app:cardBackgroundColor="#FFFFFF"
                app:layout_constraintTop_toBottomOf="@id/new_announcements_card"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Card Header Shadow -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="4dp"
                        android:background="@drawable/card_header_shadow" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingTop="8dp">

                        <TextView
                            android:id="@+id/assignments_title"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Pending Assignments"
                            android:textSize="20sp"
                            android:textColor="#2E3B55"
                            android:fontFamily="@font/poppins"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/view_all_assignments_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="View All"
                            android:textSize="14sp"
                            android:textColor="#FFFFFF"
                            android:background="@drawable/button_gradient_background"
                            android:fontFamily="@font/poppins"
                            android:paddingHorizontal="16dp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="4dp"
                        android:layout_marginTop="12dp"
                        android:background="#388E3C" />

                    <LinearLayout
                        android:id="@+id/assignments_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="12dp" />

                    <TextView
                        android:id="@+id/no_assignments_message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_gravity="center"
                        android:text="No pending assignments."
                        android:textSize="16sp"
                        android:textColor="#546E7A"
                        android:fontFamily="@font/poppins"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/retry_assignments_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_gravity="center"
                        android:text="Retry"
                        android:textSize="16sp"
                        android:textColor="#FFFFFF"
                        android:background="@drawable/button_gradient_background"
                        android:fontFamily="@font/poppins"
                        android:paddingHorizontal="16dp"
                        android:visibility="gone" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Fee Payment Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fee_payment_card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp"
                app:cardBackgroundColor="#FFFFFF"
                app:layout_constraintTop_toBottomOf="@id/assignments_card"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Card Header Shadow -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="4dp"
                        android:background="@drawable/card_header_shadow" />

                    <TextView
                        android:id="@+id/fee_payment_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Fee Payment"
                        android:textSize="20sp"
                        android:textColor="#2E3B55"
                        android:fontFamily="@font/poppins" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="4dp"
                        android:layout_marginTop="12dp"
                        android:background="#D81B60" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Results Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/results_card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp"
                app:cardBackgroundColor="#FFFFFF"
                app:layout_constraintTop_toBottomOf="@id/fee_payment_card"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Card Header Shadow -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="4dp"
                        android:background="@drawable/card_header_shadow" />

                    <TextView
                        android:id="@+id/results_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Results"
                        android:textSize="20sp"
                        android:textColor="#2E3B55"
                        android:fontFamily="@font/poppins" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="4dp"
                        android:layout_marginTop="12dp"
                        android:background="#FBC02D" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <!-- FAB for Alerts -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_alerts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_qr"
        app:backgroundTint="#1A237E"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="24dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
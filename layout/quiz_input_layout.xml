<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="#FAFAFA"
    android:layout_marginBottom="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:id="@+id/question_number_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Question"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#1A1A1A"
            android:layout_marginBottom="8dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/question_text_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:hintTextColor="#4CAF50"
            app:boxStrokeColor="#4CAF50"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/question_text_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter question text"
                android:textSize="16sp"
                android:textColor="#1A1A1A"/>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Options"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#1A1A1A"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/option_a_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:hintTextColor="#4CAF50"
            app:boxStrokeColor="#4CAF50"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/option_a_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Option A"
                android:textSize="16sp"
                android:textColor="#1A1A1A"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/option_b_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:hintTextColor="#4CAF50"
            app:boxStrokeColor="#4CAF50"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/option_b_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Option B"
                android:textSize="16sp"
                android:textColor="#1A1A1A"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/option_c_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:hintTextColor="#4CAF50"
            app:boxStrokeColor="#4CAF50"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/option_c_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Option C"
                android:textSize="16sp"
                android:textColor="#1A1A1A"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/option_d_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:hintTextColor="#4CAF50"
            app:boxStrokeColor="#4CAF50"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/option_d_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Option D"
                android:textSize="16sp"
                android:textColor="#1A1A1A"/>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Correct Option (0=A, 1=B, 2=C, 3=D)"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#1A1A1A"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/correct_option_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:hintTextColor="#4CAF50"
            app:boxStrokeColor="#4CAF50"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/correct_option_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter correct option (0-3)"
                android:inputType="number"
                android:textSize="16sp"
                android:textColor="#1A1A1A"/>
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/remove_question_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remove Question"
            android:textSize="16sp"
            android:backgroundTint="#EF5350"
            android:textColor="#FFFFFF"
            app:cornerRadius="8dp"
            style="@style/Widget.MaterialComponents.Button"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
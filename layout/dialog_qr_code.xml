<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_background"
    android:padding="16dp"
    android:elevation="8dp">

    <!-- Pin Icon -->

    <!-- Title -->
    <ImageView
        android:id="@+id/pin_icon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="7dp"
        android:contentDescription="Pin decoration"
        android:src="@drawable/ic_pin" />

    <TextView
        android:id="@+id/qr_code_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:text="Your Student ID QR Code"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#0D47A1" />

    <!-- QR Code Image -->
    <ImageView
        android:id="@+id/qr_code_image"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_below="@id/qr_code_title"
        android:layout_centerHorizontal="true"
        android:contentDescription="Student ID QR Code"
        android:scaleType="centerInside"
        android:background="#F5F5F5"
        android:padding="8dp" />

    <!-- Close Button -->
    <Button
        android:id="@+id/close_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/qr_code_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:paddingHorizontal="24dp"
        android:text="Close"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#1976D2" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="140dp"
    android:layout_height="80dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/selectableItemBackground">

    <View
        android:id="@+id/slider"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#F5AEAE"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="12dp" />

    <View
        android:id="@+id/slider_card"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="#DC3535"
        app:layout_constraintBottom_toBottomOf="@id/slider"
        app:layout_constraintStart_toStartOf="@id/slider"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="12dp" />

    <View
        android:id="@+id/slider_card_front"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="#DC3535"
        app:layout_constraintTop_toTopOf="@id/slider_card"
        app:layout_constraintStart_toStartOf="@id/slider_card" />

    <View
        android:id="@+id/slider_card_back"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="#379237"
        app:layout_constraintTop_toTopOf="@id/slider_card"
        app:layout_constraintStart_toStartOf="@id/slider_card" />

</androidx.constraintlayout.widget.ConstraintLayout>
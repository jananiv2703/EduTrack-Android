<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FA"
    android:padding="16dp">

    <!-- Header: Announcements Title -->
    <TextView
        android:id="@+id/announcements_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Announcements"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#2E3B55"
        android:fontFamily="@font/poppins"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Teacher ID Display -->
    <TextView
        android:id="@+id/teacher_id_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Teacher ID: "
        android:textSize="16sp"
        android:textColor="#6B7280"
        android:fontFamily="@font/poppins"
        app:layout_constraintTop_toBottomOf="@id/announcements_title"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- ScrollView for Announcements -->
    <ScrollView
        android:id="@+id/announcements_scroll_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/teacher_id_display"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/announcements_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp" />
    </ScrollView>

    <!-- Load More Button -->
    <Button
        android:id="@+id/load_more_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Load More"
        android:backgroundTint="#4B5EAA"
        android:textColor="@android:color/white"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Loading Spinner -->
    <ProgressBar
        android:id="@+id/loading_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- No Announcements Message -->
    <TextView
        android:id="@+id/no_announcements_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No announcements available for teachers."
        android:textSize="16sp"
        android:textColor="#6B7280"
        android:fontFamily="@font/poppins"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/announcements_scroll_view"
        app:layout_constraintBottom_toBottomOf="@id/announcements_scroll_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
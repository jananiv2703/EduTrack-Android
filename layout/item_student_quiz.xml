<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardElevation="3dp"
    app:cardBackgroundColor="#FFFFFF"
    android:layout_marginBottom="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/student_quiz_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quiz Name"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:fontFamily="sans-serif-medium"/>

        <TextView
            android:id="@+id/student_quiz_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Quiz Description"
            android:textSize="14sp"
            android:textColor="#757575"
            android:fontFamily="sans-serif"/>

        <TextView
            android:id="@+id/student_quiz_created_at"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Created At: 2025-06-13"
            android:textSize="12sp"
            android:textColor="#B0B0B0"
            android:fontFamily="sans-serif"/>

        <Button
            android:id="@+id/student_take_quiz_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Take Quiz"
            android:background="@drawable/gradient_button"
            android:textColor="@android:color/white"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textSize="14sp"
            android:fontFamily="sans-serif-medium"
            android:elevation="2dp"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
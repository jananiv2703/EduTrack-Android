<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/active_background_gradient"
    android:padding="16dp">

    <ImageView
        android:id="@+id/teacherNavHeaderProfileImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_teacherloginlogo"
        android:background="@drawable/teacher_circle_background"
        android:scaleType="centerCrop"
        android:clipToOutline="true"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:id="@+id/teacherNavHeaderNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="John Doe"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/teacherNavHeaderRoleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Teacher"
        android:textColor="#E0E0E0"
        android:textSize="14sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="4dp" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- Permissions for internet access (needed for Retrofit/Glide) -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- Permission for reading external storage (needed for file uploads on Android 12 and below) -->
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/f2"
        android:label="@string/app_name"
        android:roundIcon="@drawable/f2"
        android:supportsRtl="true"
        android:theme="@style/Theme.EduTrack"
        android:usesCleartextTraffic="true"
        tools:targetApi="34">

        <!-- Main Activity -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.EduTrack.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> 
        <!-- Student Activity with NoActionBar theme -->
        <activity
            android:name=".ui.student.StudentActivity"
            android:exported="false"
            android:theme="@style/Theme.EduTrack.NoActionBar" />
        <!-- Teacher Activity with NoActionBar theme -->
        <activity
            android:name=".ui.teacher.TeacherActivity"
            android:exported="false"
            android:theme="@style/Theme.EduTrack.NoActionBar" />

        <activity
            android:name=".ui.admin.AdminActivity"
            android:exported="false"
            android:theme="@style/Theme.EduTrack.NoActionBar" />
    </application>
</manifest>